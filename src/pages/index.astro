    <script>
      function me_when() {
        const birthDate = new Date(2003, 6, 9); // July 9, 2003
        const now = new Date();
        const diff = now - birthDate;
        const age = diff / (1000 * 60 * 60 * 24 * 365.25);
        const formatted = `${Math.floor(age)}.${(age % 1).toFixed(9).substring(2)}`;
        const ageElement = document.getElementById('my_age');
        if (ageElement) {
          ageElement.textContent = formatted;
        }
      }

      // Initial run
      me_when();

      // Update live every 100 milliseconds
      setInterval(me_when, 100);
    </script>
