---
import Base from "../../layouts/Base.astro";

const projects = [
  {
    title: "NetGPT",
    year: 2025,
    description:
      "A transformer-based AI agent for real-time network traffic optimization and attack detection using packet reconstruction techniques.",
    url: "https://github.com/Amrithesh-Kakkoth/NetGPT", // Update if needed
  },
  {
    title: "Debian CLI Agent",
    year: 2025,
    description:
      "Lightweight LLM (Qwen2.5-0.5B fine-tuned) that translates natural language to shell commands for Debian-based systems.",
    url: "https://github.com/Amrithesh-Kakkoth/debian-cli-agent", // Update if needed
  },
  {
    title: "DocuMind (RAG Pipeline)",
    year: 2025,
    description:
      "Built a scalable RAG pipeline with multi-vector document evaluation and query reformulation, optimized for observability and quality control.",
    url: "https://github.com/Amrithesh-Kakkoth/documind", // Update if needed
  },
  {
    title: "SecureVision",
    year: 2024,
    description:
      "Anomaly detection system for computer vision pipelines using spatiotemporal encoding and feature deviation monitoring.",
    url: "https://github.com/Amrithesh-Kakkoth/securevision", // Update if needed
  },
];


const title = "Projects";
const description = "My Projects";
---

<Base title={title} description={description}>
  <section>
    <h1 class="mb-8 text-2xl font-medium tracking-tight">Projects</h1>
    <div class="space-y-6">
      {
        projects.map((project, index) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block group hover:opacity-80 transition-opacity duration-200">
            <div class="flex flex-col">
              <div class="w-full flex justify-between items-baseline">
                <span class="text-black dark:text-white font-medium tracking-tight">
                  {project.title}
                </span>
                <span class="text-neutral-600 dark:text-neutral-400 tabular-nums text-sm">
                  {project.year}
                </span>
              </div>
              <p class="prose prose-neutral dark:prose-invert pt-3">
                {project.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Base>
