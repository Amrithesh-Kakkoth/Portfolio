---
import {
  FaXTwitter,
  FaGithub,
  FaInstagram,
  FaRss,
  FaLinkedinIn,
} from "react-icons/fa6";
import { TbMailFilled } from "react-icons/tb";
import { metaData, socialLinks } from "../config";

const YEAR = new Date().getFullYear();

const socialIcons = [
  { href: socialLinks.twitter, icon: FaXTwitter },
  { href: socialLinks.github, icon: FaGithub },
  { href: socialLinks.instagram, icon: FaInstagram },
  { href: socialLinks.linkedin, icon: FaLinkedinIn },
  { href: socialLinks.email, icon: TbMailFilled },
];
---

<small class="block lg:mt-24 mt-16 text-[#1C1C1C] dark:text-[#D4D4D4]">
  <time>Â© {YEAR}</time>{" "}
  <a
    class="no-underline"
    href={socialLinks.twitter}
    target="_blank"
    rel="noopener noreferrer">
    {metaData.title}
  </a>
  <div
    class="flex text-lg gap-3.5 float-right transition-opacity duration-300 hover:opacity-90">
    {socialIcons.map((link) => (
      <a href={link.href} target="_blank" rel="noopener noreferrer">
        <link.icon />
      </a>
    ))}
    <a href="/rss.xml" target="_self">
      <FaRss />
    </a>
  </div>
</small>

<style>
  @media screen and (max-width: 480px) {
    article {
      padding-top: 2rem;
      padding-bottom: 4rem;
    }
  }
</style>
